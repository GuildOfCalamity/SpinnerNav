<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows7.0</TargetFramework>
    <RootNamespace>SpinnerNav</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <!-- 
      Get rid of all the unecessary pathing that MS adds and 
      makes the output match the traditional .NET Framework builds.
    -->
	<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
	<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	<ApplicationIcon>AppLogo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="AppLogo.png" />
    <None Remove="Assets\Icon_Attention.png" />
    <None Remove="Assets\Icon_Error.png" />
    <None Remove="Assets\Icon_Info.png" />
    <None Remove="Assets\Icon_Menu.png" />
    <None Remove="Assets\Icon_Success.png" />
    <None Remove="Assets\Icon_Warning.png" />
    <None Remove="Fonts\fontawesome-webfont.ttf" />
  </ItemGroup>

