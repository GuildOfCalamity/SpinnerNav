                SpinSpeed="0:0:2.5"
                SpinVisible="{Binding Path=Spin4Visible, UpdateSourceTrigger=PropertyChanged, FallbackValue=false}"
                SpinWidth="50" />
            <root:SpinButtonControl
                Grid.Column="2"
