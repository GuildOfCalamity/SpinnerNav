        root:AnimateBlurInProperty.Value="{Binding DimmableOverlayVisible, UpdateSourceTrigger=PropertyChanged}"
        Background="{StaticResource SecondaryBrush}"
        MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Calibri"
            FontSize="60"
            FontWeight="Bold"
            Foreground="DodgerBlue"
            Text="PAGE 1" />
        <TextBlock
            x:Name="tbDescription"
            Grid.Row="0"
            Margin="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontFamily="Calibri"
            FontSize="24"
            FontWeight="Normal"
            Foreground="Gray"
            Text="Click on each spinner to test the visibility property. When the spinner is not visible the animation is stopped in the intrest of performance."
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <Expander
            x:Name="expMenu"
            Grid.Row="1"
            Margin="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            BorderThickness="0"
            Collapsed="Expander_Collapsed"
            ExpandDirection="Up"
            Expanded="Expander_Expanded"
            Foreground="{StaticResource PrimaryBrush}"
            Style="{DynamicResource MenuExpanderStyle}">
            <Expander.Header>
                <DockPanel VerticalAlignment="Stretch">
                    <TextBlock
                        Margin="3,0"
                        FontSize="12"
                        FontStyle="Italic"
                        Foreground="#808080"
                        Text="{Binding ExpanderText, UpdateSourceTrigger=PropertyChanged, FallbackValue=Click to show commands}" />
                </DockPanel>
            </Expander.Header>
            <Grid VerticalAlignment="Top" root:AnimateSlideInFromBottomProperty.Value="{Binding PerformMenu, UpdateSourceTrigger=PropertyChanged}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Width="70"
                    BorderThickness="1"
                    Command="{Binding Command1}"
                    Content="Cmd1"
                    FontSize="20"
                    Style="{StaticResource GrowButton}" />
                <Button
                    Grid.Column="1"
                    Width="70"
                    BorderThickness="1"
                    Command="{Binding Command2}"
                    Content="Cmd2"
                    FontSize="20"
                    Style="{StaticResource GrowButton}" />
                <Button
                    Grid.Column="2"
                    Width="70"
                    BorderThickness="1"
                    Command="{Binding Command3}"
                    Content="Cmd3"
                    FontSize="20"
                    Style="{StaticResource GrowButton}" />
                <Button
                    Grid.Column="3"
                    Width="70"
                    BorderThickness="1"
                    Command="{Binding Command4}"
                    Content="Cmd4"
                    FontSize="20"
                    Style="{StaticResource GrowButton}" />
            </Grid>
        </Expander>

